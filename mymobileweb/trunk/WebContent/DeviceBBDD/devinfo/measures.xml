<Measures>
	<Measure type="Storage">
		<!-- Byte -->
		<Unit name="byte">
			<Conversions>
				<Unit name="kilobyte" factor="0.0009765625"/>
				<Unit name="megabyte" factor="0.000000953"/>
			</Conversions>
		</Unit>
		<!-- KiloByte -->
		<Unit name="kilobyte">
			<Conversions>
				<Unit name="byte" factor="1024"/>
				<Unit name="megabyte" factor="0.0009765625"/>
			</Conversions>
		</Unit>
		<!-- MegaByte -->
		<Unit name="megabyte">
			<Conversions>
				<Unit name="byte" factor="1048576"/>
				<Unit name="kilobyte" factor="1024"/>
			</Conversions>
		</Unit>
	</Measure>
	<Measure type="PhysicalLength">
		<!-- Meter -->
		<Unit name="meter">
			<Conversions>
				<Unit name="foot" factor="3.28084"/>
				<Unit name="pica" factor="236.22"/>
				<Unit name="millimeter" factor="1000"/>
				<Unit name="centimeter" factor="100"/>
				<Unit name="inch" factor="39.37"/>
				<Unit name="point" factor="2384.65"/>
			</Conversions>
		</Unit>
		<!-- Feet -->
		<Unit name="foot"/>
		<!-- Pica -->
		<Unit name="pica"/>
		<!-- Millimeter -->
		<Unit name="millimeter"/>
		<!-- Centimeter -->
		<Unit name="centimeter"/>
		<!-- Inche -->
		<Unit name="inch"/>
		<!-- Point -->
		<Unit name="point"/>
	</Measure>
</Measures>
