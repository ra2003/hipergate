<!-- Bring in the datatypes -->
<!ENTITY % xhtml-datatypes.mod
         PUBLIC "-//W3C//ENTITIES XHTML Datatypes 1.0//EN"
         "http://www.w3.org/MarkUp/DTD/xhtml-datatypes-1.mod" >
%xhtml-datatypes.mod;

<!ELEMENT VocabularyDescription (Aspects*, Properties*)>
<!ATTLIST VocabularyDescription
          xmlns:xs CDATA #FIXED "http://www.w3.org/2001/XMLSchema"	     
	      target CDATA #REQUIRED
>                

<!ELEMENT Aspects (Aspect*)>

<!ELEMENT Aspect EMPTY>
<!ATTLIST Aspect	      
	      name ID #REQUIRED	      
>                

<!ELEMENT Properties (Property*)>

<!ELEMENT Property (Documentation?, RelatedOntologyEntity*)>
<!ATTLIST Property
          name CDATA #REQUIRED
          datatype CDATA #REQUIRED		  
		  aspects CDATA #REQUIRED
          defaultAspect IDREF #REQUIRED
>

<!ELEMENT Documentation (#PCDATA)>
<!ATTLIST Documentation
          source %URI.datatype; #IMPLIED          
>

<!ELEMENT RelatedOntologyEntity EMPTY>
<!ATTLIST RelatedOntologyEntity
          uri %URI.datatype; #REQUIRED          
>

