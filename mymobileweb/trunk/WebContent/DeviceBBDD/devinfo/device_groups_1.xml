<deviceStructures xmlns="http://www.w3.org/2008/05/structures">
	
	<vocabularies>
		<vocabulary iri="http://www.w3.org/2008/01/ddr-core-vocabulary" nsPrefix="" />
		<vocabulary iri="http://morfeo-project.org/mymobileweb" nsPrefix="mymw"/>
		<vocabulary iri="http://wurfl.sourceforge.net" nsPrefix="wurfl"/>
	</vocabularies>
	
	<groups>	
	
		<group id="WapDevice">
			<expression>
				[mymw:preferredPageMarkupLanguage] == 'wml_1_1' or  [mymw:preferredPageMarkupLanguage] == 'wml_1_2'
				or [mymw:preferredPageMarkupLanguage] == 'wml_1_3'								
			</expression>
		</group>
		
		<group id="IModeDevice">
			<expression>
				[mymw:preferredPageMarkupLanguage] == 'html_wi_imode_html_1' or
				[mymw:preferredPageMarkupLanguage] == 'html_wi_imode_html_2' or
				[mymw:preferredPageMarkupLanguage] == 'html_wi_imode_html_3' or
				[mymw:preferredPageMarkupLanguage] == 'html_wi_imode_html_4' or
				[mymw:preferredPageMarkupLanguage] == 'html_wi_imode_html_5' or
				[mymw:preferredPageMarkupLanguage] == 'html_wi_imode_htmlx_1' or
				[mymw:preferredPageMarkupLanguage] == 'html_wi_imode_htmlx_2'
			</expression>
		</group>
			
		<group id="XHTMLMPDevice">
			<expression>
				[mymw:preferredPageMarkupLanguage] == 'html_wi_oma_xhtmlmp_1_0' or [mymw:preferredPageMarkupLanguage] == 'html_wi_w3_xhtmlbasic'
			</expression>
		</group>
		
		<group id="NokiaDeviceExcept6670">
			<expression>
				[vendor] == 'Nokia' and [model] != '6670'
			</expression>
		</group>
		
		<group id="iPhone">
			<expression>
				[vendor] == 'Apple' and [model] == 'iPhone'
			</expression>
		</group>
		
		<group id="PdaDevice">
			<expression><![CDATA[
				[mymw:preferredPageMarkupLanguage] == 'html_web_3_2' and [mymw:typicalDisplayCharactersY] > 8 and [mymw:typicalDisplayCharactersY] < 15
				and [mymw:typicalDisplayCharactersX] < 40 and [mymw:isWirelessDevice] == true
			]]></expression>
		</group>
		
		<group id="PcDevice">
			<expression>
				[mymw:preferredPageMarkupLanguage] == 'html_web_4_0' and [mymw:isWirelessDevice] == false
			</expression>
		</group>
		
		<group id="MoreThan15Columns">
			<expression><![CDATA[
				[mymw:typicalDisplayCharactersX] > 15
			]]></expression>
		</group>
		
		<group id="SupportAJAX">
			<expression>
				[mymw:ajaxXhrType] != 'none' and ([mymw:preferredPageMarkupLanguage] == 'html_web_3_2' or [mymw:preferredPageMarkupLanguage] == 'html_web_4_0')
			</expression>
		</group>
		
		<!-- Example WURFL Vocabulary -->
		
		<group id="NokiaDeviceSeries60">
			<expression>
				[wurfl:brand_name] == 'Nokia' and [wurfl:nokia_series] == 60
			</expression>
		</group>		
				
	</groups>
</deviceStructures>
