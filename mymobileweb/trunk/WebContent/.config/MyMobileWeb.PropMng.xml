<!-- MyMobileWeb global configuration file -->
<configuration name = "root">
  	
    <!-- StylesManager component -->
    <module name="StylesManager">
        <!-- Directory for platform-defined styles -->
        <property name="Platform_Directory" value="resources/transformations/css" />
        <!-- Directory for application-defined styles -->
        <property name="Application_Directory" value="css" />
        <!-- Directory name for generic application-defined styles -->
        <property name="Generic_Directory" value="generic" />
        <!-- Name for default application-defined styles -->
        <property name="Default_Application_Css" value="default.css" />
        <!--
        	# Styles definition precedence
        	#   
        	#   When more than one style is defined for a component, like:
        	#       <cmt:inputfield style="est1 est2 est3" ... />
        	#   this property defines the precedence to resolve the possible
        	#   conflit among same properties in different styles
        	#   (for instants, est1 style defines "bold:true" and est2
        	#   defines "bold:false"... what bold value is to be taken for
        	#   the previous inputfile?)
        	#
            #
        	#   Values:
        	#        topfirst: The first one has the greater precedence (est1)
        	#        toplast:  The last one has the lowest precedence (est2)
        -->
        <property name="Styles_Precedence" value="topfirst" />
    </module>
  	  	
</configuration>